<div class="row">
  <div class="col-sm-6">
    <h1>Businesses</h1>
  </div>
  <div class="col-sm-6 text-right">
    <%= link_to new_business_path, class: 'btn btn-primary' do %>
      Add New Business
    <% end %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <%= render @businesses %>
    </tbody>
  </table>
</div>
