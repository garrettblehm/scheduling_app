<%= form_with(model: business) do |form| %>
  <% if business.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(business.errors.count, "error") %> prohibited this business from being saved:</h2>
      <ul>
        <% business.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control',placeholder: "My Business Name" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control',placeholder: "My Business provides..." %>
  </div>
  <h4> Address </h4>
  <%= form.fields_for :address, OpenStruct.new(form.object.address || {}) do |address| %>
    <div class="form-group">
      <%= form.label :street %>
      <%= address.text_field :street,class: 'form-control', placeholder: "123 Road St" %>
    </div>
    <div class="form-group">
      <%= form.label :city %>
      <%= address.text_field :city,class: 'form-control', placeholder: "Kansas City" %>
    </div>
    <div class="form-group">
      <%= form.label :state %>
      <%= address.text_field :state,class: 'form-control', placeholder: "KS"  %>
    </div>
    <div class="form-group">
      <%= form.label :zipcode %>
      <%= address.text_field :zipcode,class: 'form-control', pattern: '[0-9]{5}', placeholder: "12345" %>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :logo %>
    <%= form.file_field :logo, accept:'image/*' %>
  </div>
  <%= image_tag logo_path(form.object), class: "rounded border shadow-sm d-block mx-auto my-3" %>
  <div class="form-group">
    <% if business.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', business, method: :delete, class: "text-danger", data: { confirm: "This will permanently delete this business and all it's associations." } %>
      </div>
    <% end %>
    <%= form.submit class: 'btn btn-primary' %>
    <% if business.persisted? %>
      <%= link_to "Cancel", business, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to "Cancel", businesses_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
